<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nanuri.rams.business.common.mapper.IBIMS603BMapper">

	<!--기타사후관리조회 -->
    <select id="selectIBIMS603B" resultType="com.nanuri.rams.business.common.dto.IBIMS603BDTO" parameterType="com.nanuri.rams.business.common.vo.IBIMS601BVO">
        SELECT DEAL_NO                                           /* 딜번호 */
             , INSPCT_DT                                         /* 점검일자 */
             , INSPCT_RMRK                                       /* 점검결과 */
             , RMRK                                              /* 비고 */
             , HND_DETL_DTM                                      /* 조작상세일시 */
             , HND_EMPNO                                         /* 조작사원번호 */
             , HND_TMNL_NO                                       /* 조작단말기번호 */
             , HND_TR_ID                                         /* 조작거래id */
             , GUID                                              /* guid */
          FROM IBIMS603B
         WHERE 1=1
           AND DEAL_NO = #{dealNo}
         ORDER BY INSPCT_DT
    </select>
    
    <!-- 기타사후관리등록 -->
    <insert id="insertIBIMS603B" parameterType="com.nanuri.rams.business.common.vo.IBIMS601BVO">
        INSERT INTO IBIMS603B 
               (
                  DEAL_NO                                           /* 딜번호 */
                , INSPCT_DT                                         /* 점검일자 */
                , INSPCT_RMRK                                       /* 점검결과 */
                , RMRK                                              /* 비고 */
                , HND_DETL_DTM                                      /* 조작상세일시 */
                , HND_EMPNO                                         /* 조작사원번호 */
                , HND_TMNL_NO                                       /* 조작단말기번호 */
                , HND_TR_ID                                         /* 조작거래id */
                , GUID                                              /* guid */
               )
        VALUES        
        	   (
                 #{dealNo}                                          /* 딜번호 */
               , #{inspctDt}                                        /* 점검일자 */
               , #{inspctRmrk}                                       /* 점검결과 */
               , #{rmrk}                                            /* 비고 */
               , SYSDATE                                                 /* 조작상세일시 */
               , #{hndEmpno}                                        /* 조작사원번호 */
               , #{hndTmnlNo}                                       /* 조작단말기번호 */
               , #{hndTrId}                                         /* 조작거래id */
               , #{guid}                                            /* guid */
               )         
    </insert>
    
    <delete id="deleteIBIMS603B" parameterType="com.nanuri.rams.business.common.vo.IBIMS601BVO">
        DELETE 
          FROM IBIMS603B
         WHERE 1=1
           AND DEAL_NO = #{dealNo}										/* 딜번호 */	
           AND INSPCT_DT = #{inspctDt}                /* 점검기준년월 */
    </delete>

</mapper>